@{
    ViewData["Title"] = "Course menu";
}

<div class="container">
    @if (ViewBag.SuccessMessage != null)
    {
        <div class="alert alert-success">@ViewBag.SuccessMessage</div>
    }
    @if (ViewBag.ErrorMessage != null)
    {
        <div class="alert alert-danger">@ViewBag.ErrorMessage</div>
    }
    @if (ViewBag.Errors != null)
    {
        @foreach (var error in ViewBag.Errors)
        {
            <div class="alert alert-danger">@error.ErrorMessage</div>
        }
    }

    <form asp-controller="Course" asp-action="CreateCourse" method="post">
        <!-- Input and Submit elements -->
        <div class="form-group">
            <label>Name</label><br />
            <input class="form-control" type="text" name="Name">
        </div>
        <div class="form-group">
            <label>Description</label><br />
            <input class="form-control" type="text" name="Description">
        </div>
        <input class="btn btn-primary" type="submit" value="Submit">
    </form>
    <table id="courseTable" class="table">
        <tr>
            <th>Id</th>
            <th>AuthorId</th>
            <th>IsPublished</th>
            <th>Name</th>
            <th>Description</th>
            <th>View</th>
            <th>Publish</th>
        </tr>
        @foreach (var item in ViewBag.Items)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.AuthorId</td>
                <td>@item.IsPublished</td>
                <td>@item.Name</td>
                <td>@item.Description</td>
                <td>
                    <form asp-controller="Course" asp-action="Course">
                        <input name="courseId" value="@item.Id" hidden="hidden" />
                        <input class="btn btn-primary" type="submit" value="View" />
                    </form>
                </td>
                <td>
                    <form asp-controller="Course" asp-action="PublishCourse">
                        <input name="courseId" value="@item.Id" hidden="hidden" />
                        <input class="btn btn-primary" type="submit" value="Publish" />
                    </form>
                </td>
                </tr>
        }
    </table>
    <form asp-controller="Home" asp-action="ChangePage" method="post">
        <ul class="pagination">
            @for (int i = 1; i <= ViewBag.PageCount; i++)
            {
                <li class="page-item @(i == ViewBag.PageNumber?"active":"")"><input type="submit" class="page-link" name="page" value="@i"></li>
            }
        </ul>
    </form>
</div>
