@{
    ViewData["Title"] = "Registration";
}

<div class="container">
        @if (ViewBag.SuccessMessage != null)
        {
            <div class="alert alert-success">@ViewBag.SuccessMessage</div>
        }
        @if (ViewBag.ErrorMessage != null)
        {
            <div class="alert alert-danger">@ViewBag.ErrorMessage</div>
        }
        @if (ViewBag.Errors != null)
        {
            @foreach (var error in ViewBag.Errors)
            {
                <div class="alert alert-danger">@error.ErrorMessage</div>
            }
        }
</div>
<form asp-controller="Auth" asp-action="Registration" method="post">
    <!-- Input and Submit elements -->
    <div class="form-group">
        <label>Login*</label><br />
        <input class="form-control" type="text" name="Login" value="@(ViewBag.Model is null ? "" : ViewBag.Model.Login)">
    </div>
    <div class="form-group">
        <label>Name</label><br />
        <input class="form-control" type="text" name="Name" value="@(ViewBag.Model is null ? "" : ViewBag.Model.Name)">
    </div>
    <div class="form-group">
        <label>Email</label><br />
        <input class="form-control" type="email" name="Email" value="@(ViewBag.Model is null ? "" : ViewBag.Model.Email)">
    </div>
    <div class="form-group">
        <label>Phone</label><br />
        <input class="form-control" type="text" name="Phone" value="@(ViewBag.Model is null ? "" : ViewBag.Model.Phone)">
    </div>
    <div class="form-group">
        <label>Password*</label><br />
        <input class="form-control" type="password" name="Password" value="@(ViewBag.Model is null ? "" : ViewBag.Model.Password)">
    </div>
    <div class="form-group">
        <label>Confirm password*</label><br />
        <input class="form-control" type="password" name="ConfirmPassword" value="@(ViewBag.Model is null ? "" : ViewBag.Model.ConfirmPassword)">
    </div>
    <input class="btn btn-primary" type="submit" value="Submit">
</form>
